// Prefix and Postfix Decrement ( -- ) operator

#include <stdio.h>
#include <conio.h>

int main( )
{
	int  a = 10, b;
	clrscr();

	b = --a;
	printf( "\n After Prefix Decrement  : " );
	printf( " a = %d and b = %d", a, b );

	a = 10;
	b = a--;
	printf( "\n After Postfix Decrement : " );
	printf( " a = %d and b = %d", a, b );

	getch();
	return 0;
}

Output:

 After Prefix Decrement  : a = 9 and b = 9
 After Postfix Decrement : a = 9 and b = 1
