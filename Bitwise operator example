//  Bitwise Operators 

#include <stdio.h> 
#include <conio.h>
 
int  main() 
{ 
	int a = 3, b = 6, c;
	clrscr();
	
	printf( "\n a = %d", a );
	printf( "\n b = %d", b );
	
	c = a & b;
	printf( "\n a & b = %d", c );
	
	c = a | b;
	printf( "\n a | b = %d", c );
	
	c = a ^ b;
	printf( "\n a ^ b = %d", c );
	
	c = ~a;
	printf( "\n ~a = %d", c );
	
	c = a << 3;
	printf( "\n a << 3 = %d", c );
	
	c = b >> 2;
	printf( "\n b >> 2 = %d", c );
	
	getch();
	return 0;
}

Output:

 a = 3
 b = 6
 a & b = 2
 a | b = 7
 a ^ b = 5
 ~a = -4
 a << 3 = 24
 b >> 2 = 1
