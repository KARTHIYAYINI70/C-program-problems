// Find months and remaining day from total days

#include<stdio.h>
#include<conio.h>
void main()
{
    	int a,b,r;
        clrscr();
    	printf("enter the value a:\n");
    	scanf("%d",&a);
       	b=a/30;
    	printf("Month::%d\n",b);
    	r=a%30;
    	printf("Remaining Days::%d",r);
    	getch();
}

Output:
	enter the value a:
