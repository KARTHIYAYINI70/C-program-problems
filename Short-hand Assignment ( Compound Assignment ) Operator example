//  Short-hand Assignment ( Compound Assignment ) Operator

#include <stdio.h> 
#include <conio.h>
 
int  main() 
{ 
	int num = 10;
	clrscr();

	printf( "\n Num : %d", num );
	
	num += 10;
	printf( "\n Num += 10 : %d", num );
	
	num -= 5;
	printf( "\n Num -= 5 : %d", num );
	
	num *= 2;
	printf( "\n Num *= 2 : %d", num );
	
	num /= 3;
	printf( "\n Num /= 3 : %d", num );
	
	num %= 3;
	printf( "\n Num %= 3 : %d", num );

	getch();
	return 0;
}

Output:

 Num : 10
 Num += 10 : 20
 Num -= 5 : 15
 Num *= 2 : 30
 Num /= 3 : 10
 Num %= 3 : 0

